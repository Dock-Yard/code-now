{
  "manifest_version": 3,  
  "name": "Codechef Code - Now",
  "description": "Extension to Add Code-Now Button to CodeChef and SPOJ Problem Pages",
  "version": "3.0",
  "content_scripts": [
    {
      "matches": ["http://www.codechef.com/*", "http://www.spoj.com/*", "http://codeforces.com/*"],
      "js": ["code_later.js"]
    }
  ],
  "background": {
    "persistent" : false,
    "scripts" : ["back.js"]
  },
  "icons":{
    "16" : "icon.png",
    "48" : "icon.png",
    "128": "icon.png"
  },
  "permissions" : [
    "tabs", "nativeMessaging", "http://www.codechef.com/*", "https://www.spoj.com/*", "https://codeforces.com/*"
  ]
}
